<!DOCTYPE html>
<html>
  <head>
    <title>multiOAuth</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <main>
			<header>
				<h2>
					multi-OAuth
				</h2>
			</header>
      <!-- Form Section -->
      <section>
				<div>
					<h3 class="form-header">Sign up for an account</h3>
				</div>
				<div class="form-container">
					<form class="form" action="/users/register" method="POST" enctype="multipart/form-data">
						<input autofocus required type="text" name="name" placeholder="Enter your name">
						<input required type="text" name="email" placeholder="Enter your email">
						<input type="file" name="photo" accept="image/*">
						<input required type="password" name="password" placeholder="Enter  password">
						<button type="submit">Sign Up</button>
					</form>
        </div>
        <div>
          <p>Already have an account?</p>
          <a href="/">Sign in</a>
        </div>
      </section>
    </main>
  </body>
</html>
